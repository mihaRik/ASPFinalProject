@section scripts{
    <script src="js/countdown.js"></script>
    <script>
        $(document).on("click", ".custom-favorite", function () {
            $.ajax({
                url: "/Product/CheckAuthorize",
                method: "GET",
                data: { id: $(this).data("id") },
                success: function (res) {
                    if (res.code === 404) {
                        swal(res.data, "You cannot add product to favorites till you log in.", "warning");
                    }
                    if (res.code === 200) {
                        swal(res.data, res.descp, "success");
                    }
                }
            })
        })

        $(document).on("click", ".custom-cart", function () {
            $.ajax({
                url: "/Product/AddToCart",
                method: "GET",
                data: { id: $(this).data("id"), quantity: 1 },
                success: function (res) {
                    if (res.code === 200) {
                        swal(res.data, res.descp, "success");
                    }
                    if (res.code === 404) {
                        swal(res.data, res.descp, "warning");
                    }
                }
            })
        })
    </script>
}